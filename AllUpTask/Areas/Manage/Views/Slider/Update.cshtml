@using AllUpTask.Models;
@model Slider

<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Update Slider</h1>

</div>

<form method="post">
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">Title </label>
            <input asp-for="Title1" type="text" class="form-control" aria-describedby="emailHelp">
            <span asp-validation-for="Title1" style="color:red"></span>

        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">Description</label>
            <input asp-for="Description" type="text" class="form-control">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">RedirectUrl</label>
            <input asp-for="RedirectUrl" type="text" class="form-control">
            <span asp-validation-for="RedirectUrl" style="color:red"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">Image</label>
            <input asp-for="Image" type="text" class="form-control">
            <span asp-validation-for="Image" style="color:red"></span>

            <label for="" class="form-label">ImageFile</label>
            <input asp-for="ImageUrl" class="form-control">
            <span asp-validation-for="ImageUrl" style="color:red"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>