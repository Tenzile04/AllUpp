@using AllUpTask.Models;
@model List<Product>
@{
    int counter = 0;
}

<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Products</h1>
    <div> <a asp-action="create" asp-controller="product" class="btn btn-primary">Create</a></div>
</div>

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>

                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Code</th>
                <th scope="col">Tax</th>
                <th scope="col">SalePrice</th>
                <th scope="col">CostPrice</th>
                <th scope="col">DiscountPercent</th>
                <th scope="col">IsAvailable</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@product.Name</td>
                    <td>@product.Desc</td>
                    <td>@product.Code</td>
                    <td>@product.Tax </td>
                    <td>@product.SalePrice</td>
                    <td>@product.CostPrice</td>
                    <td>@product.DiscountPercent</td>
                    <td>@product.IsAvailable</td>
                    <td>
                        <a asp-controller="product" asp-action="update" asp-route-id="@product.Id" class="btn btn-success">Update</a>
                        <a asp-controller="product" asp-action="delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


