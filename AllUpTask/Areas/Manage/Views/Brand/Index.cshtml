@using AllUpTask.Models;
@model List<Brand>
@{
    int counter = 0;
}

<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Brands</h1>
    <div> <a asp-action="create" asp-controller="brand" class="btn btn-primary">Create</a></div>
</div>

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>

                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@brand.Name</td>

                    <td>
                        <a asp-controller="brand" asp-action="update" asp-route-id="@brand.Id" class="btn btn-success">Update</a>
                        <a asp-controller="brand" asp-action="delete" asp-route-id="@brand.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
